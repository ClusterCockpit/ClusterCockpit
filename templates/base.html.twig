<html>
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('css/fontawesome-all.min.css') }}" rel="stylesheet" type="text/css" />
            <link href="{{ asset('css/app.css') }}" rel="stylesheet" type="text/css" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light fixed-top bg-light">
            <a class="navbar-brand" href="#page-top">
                <img alt="Brand" src="{{ asset('img/cc-logo.png') }}" class="d-inline-block align-top">
                {% block brand %}
                {% endblock %}
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            {% block navigation %}
            <div class="collapse navbar-collapse">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('list_jobs') }}">
                                Live view
                                <i class="fas fa-server"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('search_jobs') }}">
                                Job Search
                                <i class="fas fa-search"></i>
                            </a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown">
                                Statistics
                                <i class="fas fa-database"></i>
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="{{ path('user_stat') }}">
                                    User Statistics
                                </a>
                                <a class="dropdown-item" href="{{ path('group_stat') }}">
                                    Group Statistics
                                </a>
                                <!-- <a class="dropdown-item" href="{{ path('cluster_stat') }}">Cluster Statistics</a> -->
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('config_index') }}">
                                Settings
                                <i class="fas fa-cog"></i>
                            </a>
                        </li>
                        {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('show_user', {id : app.user.id}) }}">
                                Statistics
                                <i class="fas fa-database"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('config_user') }}">
                                Settings
                                <i class="fas fa-cog"></i>
                            </a>
                        </li>
                        {% endif %}
                    </ul>
                    <form class="form-inline my-0" onsubmit="this.action='/monitoring/searchId/';">
                        <input class="form-control mr-sm-2" name="searchId" placeholder="jobId / userId" id="searchId" aria-label="Search">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                    </form>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('security_logout') }}">
                                Logout
                                <i class="fas fa-sign-out-alt"></i>
                            </a>
                        </li>
                    </ul>
            </div>
            {% endblock %}
        </nav>

        <div class="container-fluid" style="margin-top:80px;">
            {% block body %}
            {% endblock %}
        </div>

        {% block footer %}
            <footer>
                <div class="container text-center">
                    <p>Copyright &copy; RRZE 2018</p>
                    <p><a href="https://www.rrze.fau.de/impressum/">Impressum</a>
                </div>
            </footer>
        {% endblock %}
        {% block javascript %}
            <script src="{{ asset('js/jquery.min.js') }}"/></script>
            <script src="{{ asset('js/bootstrap.min.js') }}"/></script>
        {% endblock %}
    </body>
</html>
