{% extends 'base.html.twig' %}

{% block title %}
    Config Panel
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/feather.min.js') }}"/></script>
    <script>
        feather.replace()
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        {{ include("renderSidebar.html.twig") }}
        <div class="col-10 ml-auto">
            <div class="table-responsive">
                <table class="table table-striped table-bordered  table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col"># Nodes</th>
                            <th scope="col">Edit</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for cluster in clusters %}
                            <tr>
                                <th scope="row">
                                    {{ cluster.id }}
                                </th>
                                <td class="align-middle text-center">{{ cluster.name }}</td>
                                <td class="align-middle text-center">{{ cluster.nodes | length }}</td>
                                <td class="align-middle text-center">
                                    <a class="btn btn-success" href="{{ path('edit_cluster', {id : cluster.id}) }}" aria-label="Edit">
                                        <span class="fas fa-pen-square fa-lg" aria-hidden="true"></span>
                                    </a>
                                </td>
                                <td class="align-middle text-center">
                                    <a class="btn btn-danger" href="{{ path('delete_cluster', {id : cluster.id}) }}" onclick="return confirm('Are you sure? This cannot be undone!')" aria-label="Delete">
                                        <span class="fas fa-times fa-lg" aria-hidden="true"></span>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
{% endblock %}

