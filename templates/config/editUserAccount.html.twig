{% extends 'base.html.twig' %}

{% block title %}
    Edit/Create User
{% endblock %}

{% block navigation %}
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script src="{{ asset('js/feather.min.js') }}"/></script>
    <script>
        feather.replace()
    </script>
{% endblock %}

{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            {{ include("renderSidebar.html.twig") }}
            <div class="col-10 ml-auto">

                <h2>{{ title }}</h2>

                {{ form_start(form) }}
                {{ form_errors(form) }}

                <div class="row mt-2">
                    {{ form_row(form.username) }}
                </div>
                <div class="row mt-2">
                    {{ form_row(form.email) }}
                </div>
                <div class="row mt-2">
                    {{ form_row(form.isActive) }}
                </div>
                <div class="row mt-2">
                    {{ form_row(form.roles) }}
                </div>
                <div class="row mt-2">
                    {{ form_row(form.plainPassword) }}
                </div>
                <div class="form-group row justify-content-end mt-4">
                    <div class="col-1">
                        {{ form_widget(form.cancel, {'attr': {'class': 'btn-danger btn'}}) }}
                    </div>
                    <div class="col-2">
                        {{ form_widget(form.save, {'attr': {'class': 'btn-success btn'}}) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
