{% extends 'base.html.twig' %}

{% block title %}
    Config Panel
{% endblock %}

{% block body %}
    <div class="row">
        {{ include("renderSidebar.html.twig") }}
        <div class="col-10 ml-auto">
            <div class="table-responsive">
                <table class="table table-striped table-bordered  table-hover">
                    <thead class="thead-light">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">User</th>
                            <th scope="col">Token</th>
                            <th scope="col">Renew</th>
                            <th scope="col">Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <th scope="row">
                                    {{ user.id }}
                                </th>
                                <td>{{ user.userName }}</td>
                                <td>{{ user.apiToken }}</td>
                                <td class="align-middle text-center">
                                    <a class="btn btn-success" href="{{ path('edit_api_key', {id : user.id}) }}" aria-label="Edit">
                                        <i class="bi-pencil-fill"></i>
                                    </a>
                                </td>
                                <td class="align-middle text-center">
                                    <a class="btn btn-danger" href="{{ path('delete_api_key', {id : user.id}) }}" onclick="return confirm('Are you sure? This cannot be undone!')" aria-label="Delete">
                                        <i class="bi-x-circle"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
{% endblock %}
