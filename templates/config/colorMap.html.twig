{% extends 'base.html.twig' %}

{% block title %}
    Config Panel
{% endblock %}

{% block javascript %}
    {{ parent() }}
    <script>
document.querySelectorAll("input").foreach( input => {
    button.addEventListener("click", (e) => {
          e.preventDefault();
          value = e.target.getAttribute("value");
          data = {
              id: {{ current.id }},
              value: value,
              name: '{{ current.name }}',
              scope: 'default'
          };

        fetch("{{ app.request.schemeAndHttpHost ~ app.request.baseUrl }}/api/configurations/{{ current.id }}"), {
                   method: 'PATCH',
                   mode: 'cors',
                   credentials: 'same-origin',
                   headers: {
                       'Content-Type': 'application/merge-patch+json'
                   },
                   body: JSON.stringify(data)
               })
        .then(data => {
               console.log("Success!");
        }).catch(error => {
               console.log("Error!");
                 });
                 });
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        {{ include("renderSidebar.html.twig") }}
        <div class="col-8 ml-auto">
            <form>
                {% for color in colors %}
                <div class="row mt-3">
                    {% if current.value == color %}
                    <div class="col-4 bg-light">
                        <div class="form-check">
                                <input class="form-check-input" type="radio" name="colorMap" id="{{ color }}" value="{{ color }}" checked>
                            <label class="form-check-label" for="{{ color }}">
                                {{ color }}
                            </label>
                        </div>
                    </div>
                {% else %}
                    <div class="col-4">
                        <div class="form-check">
                                <input class="form-check-input" type="radio" name="colorMap" id="{{ color }}" value="{{ color }}">
                            <label class="form-check-label" for="{{ color }}">
                                {{ color }}
                            </label>
                        </div>
                    </div>
                    {% endif %}
                    <div class="col-5">
                        <img src={{ asset("img/colormaps/#{color}.png") }} class="rounded mx-auto d-block">
                    </div>
                </div>
                {% endfor %}
            </form>
        </div>
    </div>
{% endblock %}
