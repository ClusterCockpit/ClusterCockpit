{% extends 'base.html.twig' %}

{% block title %}
    JobMonitoring Login
{% endblock %}

{% block navigation %}
{% endblock %}

{% block body %}
    <section class="content-section">
        <div class="container">
            <div class="row">
                <div class="col-md-5 mx-auto">
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                     <div class="card rounded-0">
                        <div class="card-header">
                            <h3 class="mb-0"><i class="fas fa-lock fa-sm" aria-hidden="true"></i> Login</h3>
                        </div>
                        <div class="card-body">
                    <form action="{{ path('security_login') }}" method="post">
                        <fieldset>
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input type="text" id="username" name="_username" value="{{ last_username }}" placeholder="User name" class="form-control  form-control-lg rounded-0"/>
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" id="password" name="_password" placeholder="Password" class="form-control  form-control-lg rounded-0" />
                            </div>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                             <button type="submit" class="btn btn-success btn-lg float-right" id="btnLogin">Login</button>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
