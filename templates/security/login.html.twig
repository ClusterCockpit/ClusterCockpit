{% extends 'base.html.twig' %}

{% block title %}
    ClusterCockpit Login
{% endblock %}

{% block navigation %}
{% endblock %}

{% block body %}
    <section class="content-section">
        <div class="container">
            <div class="row">
                <div class="col-4 mx-auto">
                    {% if error %}
                        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <div class="card">
                        <div class="card-header">
                            <h3>Login</h3>
                        </div>
                        <div class="card-body">
                            <form action="{{ path('security_login') }}" method="post">
                                <fieldset>
                                    <div class="form-group">
                                        <label for="username">Username</label>
                                        <input type="text" id="inputUsername" name="username" value="{{ last_username }}" placeholder="User name" class="form-control  form-control-lg rounded-0" required autofocus>
                                    </div>
                                    <div class="form-group">
                                        <label for="password">Password</label>
                                        <input type="password" id="inputPassword" name="password" placeholder="Password" class="form-control  form-control-lg rounded-0" required>
                                    </div>
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
                                    <button type="submit" class="btn btn-success btn-lg" id="btnLogin">Submit</button>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
    </section>
{% endblock %}
