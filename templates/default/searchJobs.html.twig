{% extends 'base.html.twig' %}

{% block title %}
    Search Jobs
{% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}
{{ form_start(form) }}
<div class="row align-items-center">
    <div class="col-md-2 offset-md-3">
        {{ form_row(form.jobId) }}
        {{ form_row(form.userId) }}
        {{ form_row(form.clusterId) }}
        {{ form_row(form.numNodesFrom) }}
        {{ form_row(form.numNodesTo) }}
    </div>
    <div class="col-md-2">
        {{ form_row(form.durationFrom) }}
        {{ form_row(form.dateFrom) }}
    </div>
    <div class="col-md-2">
        {{ form_row(form.durationTo) }}
        {{ form_row(form.dateTo) }}
    </div>
</div>
<div class="row">
    <div class="col-md offset-md-3">
        {{ form_row(form.search) }}
    </div>
</div>
{{ form_end(form) }}
{% endblock %}

